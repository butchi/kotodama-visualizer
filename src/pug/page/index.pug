    script(async, defer, src="https://connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v3.2&appId=903742642995033&autoLogAppEvents=1")
    .wrapper
      .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
        .mdl-layout__header
          .mdl-layout__header-row
            span.mdl-layout-title コトダマ可視化デモ
        .mdl-layout__drawer
          nav.mdl-navigation
            a.mdl-navigation__link(href='./')
              i.material-icons
                | mic
              | マイク入力
            a.mdl-navigation__link(href='./?display=true')
              i.material-icons
                | speaker
              | ページ外音声
            a.mdl-navigation__link(href='./?audio=vivaldi-spring')
              | ヴィヴァルディ 四季より『春』
            a.mdl-navigation__link(href='./?audio=chopin-nocturnes')
              | ショパン『夜想曲第二番』
            a.mdl-navigation__link(href='./?audio=satie-je-te-veux')
              | サティ『Je te veux』

        main.mdl-layout__content
          .page-content
            audio(data-js-output, autoplay)
            canvas.stage(data-js-canvas, width="256", height="256")
            video(data-js-stage, width="256", height="256", autoplay, controls)
          .cover(data-js-btn-play)
            .icon-play.material-icons
              | play_arrow

